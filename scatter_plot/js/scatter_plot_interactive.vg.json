{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Food Consumption (2017)",
  "data": {
    "url": "https://raw.githubusercontent.com/benchipperfield/FIT3179/main/scatter_plot/data/data2.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels":[
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Population > Population_Above"},
    {"filter": "Continent_selection == null || datum.Region == Continent_selection"},
    {
     
    }
  ],
  "encoding": {
    "x": {
      "field": "Meat",
      "type": "quantitative",
      "title":"Meat consumption (Kilograms per capita)",
      "axis": {"tickCount": 3},
      "scale": {"type": "log",  "domain":[1, 1000]}
    },
    "y": {
      "field": "Vegetables",
      "type": "quantitative",
      "title":"Vegetable consumption (Kilograms per capita)",
      "axis": { "tickCount": 3},
      "scale": {"type": "log", "domain":[1, 1000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Meat", "type": "quantitative", "format": ","},
      {"field": "Vegetables", "type": "quantitative", "format": ","},
      {"field": "Alcoholic Beverages", "type": "quantitative", "format": ","},
      {"field": "Fish, Seafood", "type": "quantitative", "format": ","},
          {
            
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Bangladesh' || datum['Country'] == 'Ethiopia' || datum['Country'] == 'Chad' || datum['Country'] == 'Tunisia' ||  datum['Country'] == 'Tajikistan' ||  datum['Country'] == 'Croatia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
      {"field": "Meat", "type": "quantitative", "format": ","},
      {"field": "Vegetables", "type": "quantitative", "format": ","},
      {"field": "Alcoholic Beverages", "type": "quantitative", "format": ","},
      {"field": "Fish, Seafood", "type": "quantitative", "format": ","},
          {

          }
        ]
      }
    }
  ]
}
