{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 425,
  "height": 200,
  "config": {"font": "Open Sans"},
  "data": {"url": "https://raw.githubusercontent.com/benchipperfield/FIT3179/main/multiple_charts/data/dotplotdata.csv"},
  "title": { "text": "Change in Vegetable Consumption Per Capita from 2014 to 2017",
   "subtitle": "Red mark indicates world vegetable consumption per capita in 2017",
   "subtitleFontStyle": "italic"},
  "transform": [
    {
      "filter": {
        "field": "Region",
        "oneOf": ["Africa", "Asia", "Europe", "North America", "Oceania", "South America"]
      }
    },
    {
      "filter": {
        "field": "Year",
        "oneOf": [2014, 2017]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Veg",
      "type": "quantitative",
      "title": "Vegetable consumption (Kilograms per capita)"
    },
    "y": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Region",
          "type": "nominal"
        },
        "color": {"value": "#969696"}
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Year",
          "type": "ordinal",
          "scale": {
            "domain": [2014, 2017],
            "range": ["#252525", "#969696"]
          },
          "title": "Year"
        },
        "size": {"value": 175},
        "opacity": {"value": 1},
        "tooltip": [
          {"field": "Region", "type": "nominal", "title": "Region"},
          {
            "field": "Veg",
            "type": "quantitative",
            "title": "Consumption per capita (Kg)"
          },
{"field": "Year", "type": "nominal", "title": "Year"}


        ]
      }
    },



{
      "mark": "rule",
      "encoding": {
        "x": {"value": 50},
        "y": {"value": 0},
       "x": {"value": 295},
       "y2": {"value": 200},
        "size": {"value": 1},
        "opacity": {"value": 1},
        "color": {"value": "red"}
      }
    }



  ]
}
