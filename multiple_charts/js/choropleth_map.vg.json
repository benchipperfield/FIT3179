{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Food Consumption Per Capita (2017)",
  "width": 1075,
  "height": 375,
  "config": {"font": "Open Sans"},
  "data": {
    "url": "https://raw.githubusercontent.com/benchipperfield/FIT3179/main/choropleth_map/custom.geo2.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "params": [
    {
      "name": "FoodType",
      "bind": {
        "input": "select",
        "options": [null,
        "Alcoholic Beverages_2017",
        "Animal fats_2017",
          "Cereals - Excluding Beer_2017",
          "Eggs_2017",
          "Fish, Seafood_2017",
          "Fruits - Excluding Wine_2017",
          "Meat_2017",
           "Milk - Excluding Butter_2017",
          "Miscellaneous_2017",
           "Offals_2017",
           "Oilcrops_2017",
           "Pulses_2017",
           "Sugar & Sweeteners_2017",
            "Sugar Crops_2017",
            "Spices_2017",
          "Starchy Roots_2017",
          "Stimulants_2017",
          "Treenuts_2017",
          "Vegetable Oils_2017",
          "Vegetables_2017"

         
        ],
        "labels": ["SELECT A FOOD TYPE",
        "Alcoholic Beverages",
        "Animal fats",
          "Cereals - Excluding Beer",
          "Eggs",
          "Fish, Seafood",
          "Fruits - Excluding Wine",
          "Meat",
          "Milk - Excluding Butter",
          "Miscellaneous",
          "Offals (Organ Meats)",
           "Oilcrops",
          "Pulses (Legumes)",
           "Sugar & Sweeteners",
            "Sugar Crops",
              "Spices",
          "Starchy Roots",
         "Stimulants (Coffee, Tea, Etc)",
          "Treenuts",
          "Vegetable Oils",
          "Vegetables"
          
          
          
          
        ],
        "name": "Food Type: "
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "layer": [
    {"mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}},
    {
      "transform": [
        {
          "lookup": "properties.admin",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/benchipperfield/FIT3179/main/choropleth_map/data/FINALDATA.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": [
              "Cereals - Excluding Beer_2017",
              "Starchy Roots_2017",
              "Meat_2017",
              "Sugar Crops_2017",
              "Sugar & Sweeteners_2017",
              "Pulses_2017",
              "Treenuts_2017",
              "Oilcrops_2017",
              "Vegetable Oils_2017",
              "Vegetables_2017",
              "Fruits - Excluding Wine_2017",
              "Stimulants_2017",
              "Spices_2017",
              "Alcoholic Beverages_2017",
              "Offals_2017",
              "Animal fats_2017",
              "Eggs_2017",
              "Milk - Excluding Butter_2017",
              "Fish, Seafood_2017",
              "Miscellaneous_2017"
            ]
          }
        },
        {"calculate": "datum[FoodType]", "as": "Consumption"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Consumption",
          "type": "quantitative",
          "scale": {"scheme": "browns"},
          "legend": {"title": "Consumption (Kg)"}
        },
        "tooltip": [
          {"field": "properties.admin", "type": "nominal", "title": "Country"},
          {
            "field": "Consumption",
            "type": "quantitative",
            "title": "Consumption per capita (kg)"
          }
        ]
      }
    }
  ]
}
